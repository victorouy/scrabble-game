<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scrabblegame.scrabble_game.MenuScrabbleFXMLController">
    <stylesheets>
        <URL value="@/styles/menuscrabblefxml.css" />
    </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" layoutY="-1.0" prefHeight="400.0" prefWidth="600.0" spacing="30.0">
         <children>
            <Label fx:id="titleMenu" prefHeight="121.0" prefWidth="335.0" text="Scrabble Game Menu" textAlignment="CENTER" textFill="#0a05b0">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#onPlay" prefHeight="61.0" prefWidth="229.0" text="Play Game" textFill="#039e08">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#onExit" prefHeight="61.0" prefWidth="230.0" text="Exit" textFill="#d00505">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <CheckBox fx:id="checkBoxStart" mnemonicParsing="false" prefHeight="25.0" prefWidth="103.0" text="AI Player Starts">
               <font>
                  <Font size="11.0" />
               </font>
            </CheckBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
